/* pages/storeManage/storeManage.wxss */
.bg {
  width: 100%;
  height: 100%;
  min-height: 100vh;
  background: rgb(139, 196, 223);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.searchBox {
  margin-top: 100rpx;
  position: relative;
  width: 80%;
}

.search {
  box-sizing: border-box;
  padding-left: 70rpx;
  width: 100%;
  height: 100rpx;
  background: white;
  border-radius: 20rpx;
  color: rgb(89, 91, 93);
  font-weight: bold;
}

.searchIcon {
  position: absolute;
  top: 30rpx;
  left: 20rpx;
}

.contentBox {
  margin-top: 100rpx;
  width: 80%;
  height: 600rpx;
  background: white;
  border-radius: 20rpx;
  display: grid;
  grid-template-rows: repeat(4, 1fr);
  grid-template-columns: 1fr 3fr;
  align-items: center;
}

p{
  margin-left: 40rpx;
}